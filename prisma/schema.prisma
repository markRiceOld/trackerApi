datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Action {
  id        String   @id @default(uuid())
  title     String
  tbd       DateTime?
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  projectId String?   
  project   Project?  @relation(fields: [projectId], references: [id])
}

model Habit {
  id        String   @id @default(cuid())
  title     String
  goals     Goal[]
  createdAt DateTime @default(now())
}

model Goal {
  id         String       @id @default(cuid())
  title      String
  dod        String?
  habitId    String?       // Nullable (standalone or linked)
  habit      Habit?        @relation(fields: [habitId], references: [id])
  milestones Milestone[]   // One-to-many
  projects   Project[]
  createdAt  DateTime      @default(now())
  startDate  DateTime?
  endDate    DateTime?
}

model Milestone {
  id        String    @id @default(cuid())
  title     String
  goalId    String
  goal      Goal      @relation(fields: [goalId], references: [id])
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Project {
  id        String    @id @default(uuid())
  title     String
  dod       String?   
  type      String    @default("individual")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  actions   Action[]
  goalId      String?      // Optional link (if not tied through milestone)
  milestoneId String?      // Optional link
  goal        Goal?        @relation(fields: [goalId], references: [id])
  milestone   Milestone?   @relation(fields: [milestoneId], references: [id])
}


